@using AssignmentProject.Models
@model AssignmentProject.Models.Order

<div class="container mt-5">
    <h2>Order Summary</h2>
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Order Details</h5>
            <p>Original Amount: $@Model.Amount.ToString("F2")</p>
            <p>Customer Type: @Model.CustomerType</p>
            <p>Discount Amount: $@Model.DiscountAmount.ToString("F2")</p>
            <hr />
            <h4>Final Total: $@Model.FinalTotal.ToString("F2")</h4>
            
            <a asp-action="Index" class="btn btn-primary mt-3">Place New Order</a>
        </div>
    </div>
</div> 