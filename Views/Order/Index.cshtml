@using AssignmentProject.Models
@model AssignmentProject.Models.Order

<div class="container mt-5">
    <h2>Place Your Order</h2>
    <form asp-action="ProcessOrder" method="post">
        <div class="form-group">
            <label asp-for="Amount">Order Amount ($)</label>
            <input asp-for="Amount" class="form-control" type="number" step="0.01" min="0" required />
        </div>
        
        <div class="form-group mt-3">
            <label asp-for="CustomerType">Customer Type</label>
            <select asp-for="CustomerType" class="form-control" required>
                <option value="">Select Customer Type</option>
                <option value="New">New Customer</option>
                <option value="Loyal">Loyal Customer</option>
            </select>
        </div>
        
        <button type="submit" class="btn btn-primary mt-3">Calculate Order</button>
    </form>
</div> 